@model EditRequestViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Request</h4>
<div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3" style="background-color:#F0F2F5">
            <div class="card-body p-4 p-md-5">
                <form asp-controller="Requests" asp-action="EditByClient" enctype="multipart/form-data" method="post">
                    <h4>Edit a new request.</h4>
                    <input type="hidden" asp-for="Id" />
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for=" Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for=" Description"></label>
                        <input asp-for=" Description" class="form-control" />
                        <span asp-validation-for=" Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for=" ExpireDate"></label>
                        <input asp-for=" ExpireDate" class="form-control" />
                        <span asp-validation-for=" ExpireDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category"></label>
                        <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<HousekeeperApp.Models.Enums.Category>()"></select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Locations"></label>
                        <select asp-for="LocationId" class="form-control" asp-items="Model.Locations"></select>
                        @*<input type="hidden" asp-for="Techs" />*@
                        <span asp-validation-for="LocationId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
